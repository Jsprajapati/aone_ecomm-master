{{ header }}
<div id="account-login" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fas fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    <div  class="col-8">
    {{ content_top }}
    
              <div class="card ">
            <div class="card-body">
              <h1>Login</h1>
              <p><strong>{{ text_i_am_returning_customer }}</strong></p>
              <form action="{{ action }}" method="post" enctype="multipart/form-data">
                <div class="form-group md-form">
                  <label class=""col-form-label" for="input-email">{{ entry_email }}</label> <input type="text" name="email" value="{{ email }}" p="{{ entry_email }}" id="input-email" class="form-control"/>
                </div>
                <div class="form-group md-form">
                  <label class="" col-form-label" for="input-password">{{ entry_password }}</label> <input type="password" name="password" value="{{ password }}" p="{{ entry_password }}" id="input-password" class="form-control"/> <a href="{{ forgotten }}">{{ text_forgotten }}</a></div>
                <button type="submit" class="btn btn-primary">{{ button_login }}</button>
                {% if redirect %}
                  <input type="hidden" name="redirect" value="{{ redirect }}"/>
                {% endif %}
              </form>
        
          </div>
        </div>
      
      {{ content_bottom }}</div>
<div class="col">
    {{ column_right }}
    </div>
    </div>
{{ footer }}
